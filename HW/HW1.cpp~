#include <iostream>
using  namespace std;

int main()
{
  char answer;
  char grade;

  cout << "Are you taking a class? Enter Y for Yes. N for No: ";
  cin >> answer;
  cout << endl;
  if(answer != 89 &&  answer != 121 &&  answer != 78 &&  answer != 110)
    {
      cout << "Invalid Output!! "; 
   } 
  else if(answer == 78 || answer == 110)
    {
      cout << "Okay good bye!" << endl;
    }
  else 
{
  cout << "Enter your grade: ";
  cin >> grade;
  switch(grade)
    {
    case 'A': case 'B': case 'a': case 'b': 
      cout << "Great Job!!" << endl;
      break;
      
    case 'C': case 'c':
      cout << "You're doing alright." << endl;
      break;
    case 'D': case 'F': case 'd': case 'f':
      cout << "You can improve." << endl;
      break;
    default :
      cout << "Invalid grade!" << endl;
    }
  return 0;

}
}
